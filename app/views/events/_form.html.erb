<%= bootstrap_form_for(@event) do |f| %>

    <%= f.text_field :title %>

    <%= f.text_area :subtitle %>

    <%= f.date_select :date %>

    <%= f.text_field :city %>

    <div class="form-group">
      <%= label_tag 'In welchem Land liegt das?' %>
      <%= country_select :event, :country_code, {priority_countries: ["GB", "FR", "DE"]}, {class: 'form-control'} %>
    </div>

    <%= f.text_area :description %>

    <%= f.text_field :tag_list %>

    <%= f.url_field :main_url %>

    <%= f.url_field :speaker_list_url %>

    <%= f.email_field :contact_url %>

    <%= f.number_field :woman %>

    <%= f.number_field :total %>

    <%= f.text_field :reporter %>

    <%= f.text_field :reporter_url %>

    <%= f.submit 'Anlegen' %>
<% end %>
