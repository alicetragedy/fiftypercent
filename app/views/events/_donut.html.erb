<div id="myfirstchart-<%= event.id %>" style="height: 250px;"> </div>
<script>

  Morris.Donut({
    element: 'myfirstchart-<%= event.id %>',
    data: [
      {label: "<%= I18n.t 'show.event.donut.male' %>",
       value: <%= event.total - event.woman %> },
      {label: "<%= I18n.t 'show.event.donut.female' %>",
       value: <%= event.woman %>},
    ],
    backgroundColor: '#ccc',
    labelColor: '#1E243E',
    colors: [
      '#0188E1',
      '#E6143B'
    ]
  });

</script>
