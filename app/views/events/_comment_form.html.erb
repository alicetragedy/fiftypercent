<%= bootstrap_form_for [event, Comment.new] do |f| %>
  <fieldsset>
    <legend>Füge einen Kommentar hinzu:</legend>
    <%= f.text_field :title %>
    <%= f.text_field :author %>
    <%= f.text_field :public_contact %>
    <%= f.text_area  :body %>
  </fieldsset>
  <fieldsset>
    <legend>Extra Info:</legend>
    <%= f.text_field :internal_contact %>
  </fieldsset>
  
  <%= f.submit 'Ergänzung hinzufügen' %>
<% end %> 