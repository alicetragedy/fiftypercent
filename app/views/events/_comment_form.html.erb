<%= bootstrap_form_for [event, comment] do |f| %>
  <fieldsset>
    <legend><%= t('fieldset.legend.comment.add_a_comment') %></legend>
    <%= f.text_field :title %>
    <%= f.text_field :author %>
    <%= f.text_field :public_contact %>
    <%= f.text_area  :body %>
  </fieldsset>
  <fieldsset>
    <legend><%= t('fieldset.legend.comment.extra_info') %></legend>
    <%= f.text_field :internal_contact %>
  </fieldsset>
  
  <%= f.submit 'Save', class: 'btn btn-success' %>
<% end %> 