<div class="container">
<div class="row">
  <div class="col-sm-4">
    <h3>Images:</h3>
  </div>
  <div class="col-sm-8 text-right">
    <%= link_to new_admin_image_path, class: 'btn btn-secondary' do %>
      <span class="fa fa-plus-circle"></span>
      add a image
    <% end %>
  </div>
</div>

<table class="table table-striped table-hover image-table table-sm">
  <thead>
    <tr>
      <th>Img</th>
      <th>Name</th>
      <th>File</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @images.each do |image| %>
      <tr>
        <td class="image">
          <%= link_to admin_image_path(image) do %>
            <%= image_tag image.file_url if image.file? %>
          <% end %>
        </td>
        <td><%= link_to image.name, admin_image_path(image) %></td>
        <td><%= image.file %></td>

        <td class="text-right">
          <%= link_to edit_admin_image_path(image) do %>
            <span class="fa fa-edit"></span>
            edit
          <% end %>
        </td>
        <td class="text-right">
          <%= link_to admin_image_path(image), method: :delete, data: { confirm: 'Are you sure?' } do %>
            <span class="fa fa-remove"></span>
            destroy
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
<br>
