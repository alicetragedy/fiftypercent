<%= render partial: 'filter_form' %>

<div class="row events-header">
  <h4 class="col-sm-6">
    <span class="glyphicon glyphicon-comment"></span>
    <%= comments_description %>
  </h4>

  <h4 class="col-sm-6 text-right">
    <%= page_entries_info @comments %>
  </h4>
</div>

<table class="table table-hover table-condensed comments">
  <thead>
    <th>Title</th>
    <th>Author</th>
    <th>Body</th>
  </thead>
  <%= render @comments %>
</table>

<% if @comments.any? %>
  <div class="row">
    <div class="col-md-5">
      <%= page_entries_info @comments %>
    </div>
    <div class="col-md-7 text-right">
      <%= paginate @comments %>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $('a[data-remote=true]').bind('ajax:beforeSend', function() {
    $(this).closest('tr').find('td').css('background-color', '#FFFFCC');
  });
</script>
