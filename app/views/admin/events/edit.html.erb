<%= bootstrap_form_for([:admin, @event]) do |f| %>

  <fieldset>
    <legend>Body (Text aus dem alten Wordpress Blog - HTML) </legend>
    <%= f.text_area :body %>
    <legend>Body (Text aus dem alten Wordpress Blog - Text)</legend>
    <%= simple_format(@event.body) %>
  </fieldset>


  <%= render partial: 'events/form_fields', locals: {f: f} %>

  <fieldset>
    <legend>Moderation Intern</legend>
    <%= f.text_area :internal_admin_info %>
  </fieldset>



  <%= f.submit 'Speichern', class: "btn btn-success" %>
<% end %>
