<div class="row">
  <div class="col-sm-4">
    <h3>All pages:</h3>
  </div>
  <div class="col-sm-8 text-right">
    <%= link_to new_admin_page_path(page_type: 'blog_post'), class: 'btn btn-success' do %>
      <span class="glyphicon glyphicon-leaf"></span>
      add new blog post
    <% end %>
    &nbsp;
    <%= link_to new_admin_page_path, class: 'btn btn-success' do %>
      <span class="glyphicon glyphicon-file"></span>
      add new page/snippet
    <% end %>
  </div>
</div>

<table id="" class="table table-striped table-hover table-condensed">
  <%= render @pages %>
</table>
