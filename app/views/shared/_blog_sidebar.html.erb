<aside>
  <h1 class="blog-sidebar__title"><%= t 'blog.sidebar.categories' %></h1>
  <ul class="list-bare">
    <% BlogCategory.order(:rank).includes(:translations).all.each do |blog_category| %>
      <li>
        <%= link_to blog_category_path(blog_category.slug) do %>
          <%= blog_category.name %>
        <% end %>
      </li>
    <% end %>
  </ul>

  <h1 class="blog-sidebar__title"><%= t 'blog.sidebar.pages' %></h1>
  <ul class="list-bare">
    <% Page.blog_pages.order(:rank).includes(:translations).all.each do |page| %>
      <li>
        <%= link_to blog_page_path(page.slug) do %>
          <%= page.title %>
        <% end %>
      </li>
    <% end %>
  </ul>

<% Page.blog_sidebar_snippets.order(:rank).includes(:translations).all.each do |snippet| %>
  <aside class="" id="<%# dom_id(snippet) %>">
    <h1 class="blog-sidebar__title"><%= snippet.title %></h1>
    <%= markdown(snippet.body) %>
  </aside>
<% end %>


  <%= link_to admin_root_path, title: "Admin" do %>
    login
    <span class="glyphicon glyphicon-cog blog-content__glyphicon"></span>
  <% end %>
</aside>
