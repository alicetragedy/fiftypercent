<% Page.blog_sidebar_snippets.order(:rank).includes(:translations).all.each do |snippet| %>
  <aside class="" id="<%# dom_id(snippet) %>">
    <h1 class="blog-sidebar__title"><%= snippet.title %></h1>
    <%= markdown(snippet.body) %>
  </aside>
<% end %>

