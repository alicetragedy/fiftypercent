<aside class="widget" id="blog-category-list">
  <h1><%= t 'blog.sidebar.categories' %></h1>
  <ul class="list-unstyled">
    <% BlogCategory.order(:rank).includes(:translations).all.each do |blog_category| %>
      <li>
        <%= link_to blog_category_path(blog_category.slug) do %>
          <span class="glyphicon glyphicon-folder-open"></span>&nbsp;
          <%= blog_category.name %>
        <% end %>
      </li>
    <% end %>
  </ul>
</aside>

<aside class="widget" id="page-list">
  <h1><%= t 'blog.sidebar.pages' %></h1>
  <ul class="list-unstyled">
    <% Page.blog_pages.order(:rank).includes(:translations).all.each do |page| %>
      <li>
        <%= link_to blog_page_path(page.slug) do %>
          <span class="glyphicon glyphicon-file"></span>
          <%= page.title %>
        <% end %>
      </li>
    <% end %>
  </ul>
</aside>

<% Page.blog_sidebar_snippets.order(:rank).includes(:translations).all.each do |snippet| %>
  <aside class="widget" id="<%= dom_id(snippet) %>">
    <h1><%= snippet.title %></h1>
    <%= markdown(snippet.body) %>
  </aside>
<% end %>


<aside class="widget text-right">
  <%= link_to admin_root_path, title: "Admin" do %>
    <span class="glyphicon glyphicon-cog"></span>
  <% end %>
</aside>